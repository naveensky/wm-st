@model StudentTracker.Site.ViewModels.Student.StudentRegisterViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Create</h2>
@using (Html.BeginForm()) {
    <fieldset>
        <legend>Register a New Student</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.CourseId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CourseId, new SelectList(Model.Courses, "Id", "Name"))
            @Html.ValidationMessageFor(model => model.CourseId)
        </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.StudyCenterId)
        </div>
         <div class="editor-field">
            @Html.DropDownListFor(model => model.StudyCenterId, new SelectList(Model.StudyCenters, "Id", "Name"))
            @Html.ValidationMessageFor(model => model.StudyCenterId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Student.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Student.Name)
            @Html.ValidationMessageFor(model => model.Student.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Student.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Student.Email)
            @Html.ValidationMessageFor(model => model.Student.Email)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Student.Mobile)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Student.Mobile)
            @Html.ValidationMessageFor(model => model.Student.Mobile)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Student.RegisterDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Student.RegisterDate, new { @class = "date" })
            @Html.ValidationMessageFor(model => model.Student.RegisterDate)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Student.ProposedExamDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Student.ProposedExamDate, new { @class = "date" })
            @Html.ValidationMessageFor(model => model.Student.ProposedExamDate)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Student.ActualExamDate)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Student.ActualExamDate, new { @class = "date" })
            @Html.ValidationMessageFor(model => model.Student.ActualExamDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Student.SoftwareGiven) @Html.LabelFor(model => model.Student.SoftwareGiven)
            @Html.ValidationMessageFor(model => model.Student.SoftwareGiven)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Student.WmPrepUsername)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Student.WmPrepUsername)
            @Html.ValidationMessageFor(model => model.Student.WmPrepUsername)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Student.BooksGiven) @Html.LabelFor(model => model.Student.BooksGiven)
            @Html.ValidationMessageFor(model => model.Student.BooksGiven)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
} 