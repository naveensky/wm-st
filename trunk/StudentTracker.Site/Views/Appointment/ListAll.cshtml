    ViewBag.Title = "ListAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListAll</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="data" cellspacing="0">
     <thead>
    <tr>
        <th>
            StartTime
        </th>
        <th>
