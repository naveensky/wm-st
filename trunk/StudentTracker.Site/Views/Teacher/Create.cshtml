@model StudentTracker.Site.ViewModels.Teacher.TeacherCreateViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Create A New Teacher</h2>
@using (Html.BeginForm()) { 

    <div class="editor-label">
        @Html.LabelFor(m => m.Teacher.Name)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Teacher.Name)
        @Html.ValidationMessageFor(m => m.Teacher.Name)
    </div>
    <div class="editor-label">
        @Html.LabelFor(m => m.Teacher.Mobile)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Teacher.Mobile)
        @Html.ValidationMessageFor(m => m.Teacher.Mobile)
    </div>
    <input type="submit" value="Create" />
}