<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:regular,bold' rel='stylesheet'
        type='text/css' />
    <link href="/Content/Styles/grid.css" rel="stylesheet" type="text/css" />
    <link href="/Content/Plugin/jui/css/flick/jquery-ui-1.8.7.custom.css" rel="stylesheet"
        type="text/css" />
    <link href="/Content/Plugin/superfish/css/superfish-custom.css" rel="stylesheet"
        type="text/css" />
    <link href="@Url.Content("~/Content/Styles/main.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" type="text/javascript"></script>
    <!-- Superfish Menu -->
    <script src="/Content/Plugin/superfish/js/hoverIntent.js" type="text/javascript"></script>
    <script src="/Content/Plugin/superfish/js/supersubs.js" type="text/javascript"></script>
    <script src="/Content/Plugin/superfish/js/jquery.bgiframe.min.js" type="text/javascript"></script>
    <script src="/Content/Plugin/superfish/js/superfish.js" type="text/javascript"></script>
    <!-- Super Fish Menu Ends -->
    <script src="@Url.Content("~/Content/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.7/jquery-ui.min.js"
        type="text/javascript"></script>
    <script src="/Content/Scripts/common.js" type="text/javascript"></script>
    @RenderSection("head", false)
</head>
<body>
    <div class="container_12">
        <div id="title" class="grid_8">
            <h1>
                Wisdom Mart - Student Tracker
            </h1>
        </div>
        <div class="grid_4">
            <span class="login">@*@Html.Partial("_LogOnPartial")*@ </span>
        </div>
        <div class="clearfix" />
        <div class="grid_12">
            @Html.Partial("_menuPartial") 
        </div>
    </div>
    <div class="container_12">
        <div class="grid_9">
            @RenderBody()
        </div>
        <div class="grid_3">
            <div class="right">
                @RenderSection("right", false)
            </div>
        </div>
        <div class="clearfix">
        </div>
        <div class="grid_12">
            <div id="footer">
                <hr />
                <span>&copy; <a href="http://greenapplesolutions.com">Green Apple Solutions</a></span>
            </div>
        </div>
    </div>
    <div id="loader">
        <img src="../../Content/Images/ajax-loader.gif" alt="loading..." />
        <span style="vertical-align: top">&nbsp;&nbsp; Loading... </span>
    </div>
</body>
</html>
